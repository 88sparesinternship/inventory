

		<form {{action "addNewUser" user on="submit"}} style="margin-top: 5%">
		    <center>
		    	<div class="form-group">Name : {{input value=user.name size="30" }}</div><br>
			    <div class="form-group">Value : {{input value=user.value size="30"}}</div><br>
			    <div>
			    	<button type="submit" class="btn btn-success">Add</button>
			    </div>		
		    </center>    
		</form>
		<br>
		<form>
        <div>
			<table>
				<tr>
					<th>nama</th>
					<th>value</th>
					<th colspan="2">action</th>
				</tr>
				{{#each model as |item|}}					
					<tr>
						<td>{{item.name}}</td>
						<td>{{item.value}}</td>
						<td><button {{action "deleteUser" item}} class="btn btn-danger">Delete</button></td>
						<td>
							{{#link-to 'user.edit' tagName='button' class="btn btn-warning" }}Edit{{/link-to}}
						</td>
					</tr>
				{{/each}}
			</table>
		</div>
</form>
		
		