<button id="btnn" class="btn btn-danger"><i class="fa fa-print"></i> Print As</button>
<br>
<br>
    <div id="tab">
        <center><h1>Laporan Barang</h1></center>
        <table id="tableData" class="table table-striped" width="100%" border="1">
            <thead class="thead-dark">
                <tr>
                    <th><center> Kode barang</center></th>
                    <th><center> Nama Barang</center></th>
                    <th><center> Kategori</center></th>
                    <th><center> Departemen</center></th>
                    <th><center> Tanggal Masukan</center></th>
                    <th><center> Tanggal Update</center></th>
                </tr>
                </thead>
                <tbody>
                    {{#each barangs as |item|}}
                    <tr>
                        <td><center>{{item.kode_barang}}</center></td>
                        <td><center>{{item.nama_barang}}</center></td>
                        <td><center>{{item.nama_kategori}}</center></td>
                        <td><center>{{item.nama_departemen}}</center></td>
                        <td><center>{{format-date item.created}}</center></td>
                        <td>
                            <center>
                            {{#if item.updated}} 
                                {{format-date item.updated}}
                            {{else}}
                                -
                            {{/if}}
                            </center>    
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>

<script src='../assets/js/excelexportjs.js'></script>
<script src="https://code.jquery.com/jquery-3.2.0.min.js"></script>

<script>
$(document).ready(function(){
    //Exel
    var $btnDLtoExcel = $('#exl');
    $btnDLtoExcel.on('click', function () {
        $("#tableData").excelexportjs({
            containerid: "tableData"
            , datatype: 'table'
        });

    });

    //Print
    function printData(){
        var divToPrint=document.getElementById("tab");
        newWin= window.open("");
        newWin.document.write(divToPrint.outerHTML);
        newWin.print();
        newWin.close();
    }

    $('#btnn').on('click',function(){
        printData();
    });

});
</script>