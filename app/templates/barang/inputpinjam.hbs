 <div class="container">	
	<h1>Pinjam Barang</h1>
	<form>
			<div class="form-group">
				{{log model}}
				Nama Peminjam : 
				<select class="form-control">
					{{#each karyawan as |karyawan|}}
						<option value="{{karyawan.nama_karyawan}}">{{karyawan.nama_karyawan}}</option>
					{{/each}}
				</select>
			</div>
			<div class="form-group"> Barang : {{input class="form-control" value=barang.nama_barang}}</div>
		    <div class="form-group"> Stok : {{input disabled=true class="form-control" value=barang.stok}}</div>
		    <div class="form-group"> Banyak Pinjaman : {{input class="form-control"}}</div>
		    <div class="form-group"> Tanggal Pinjam : {{input class="form-control"  value=peminjaman.tgl_pinjam type="date" size="30"}}</div>
		    <button {{action "addPinjam" type="submit" }} class="btn btn-primary">
		    	Pinjam
		    </button>
		    {{#link-to 'barang.pinjam' class="btn btn-danger"}}Batal{{/link-to}}
	</form>

	
</div>