<table class="table table-striped table-bordered table-hovered" id="barangg">
    <thead>
    <tr>
        <th>Kode Barang</th>
        <th>nama barang</th>
        <th>created</th>
        <th>updated</th>
        <th>action</th>
    </tr>
    </thead>
    <tbody>
    {{#each model as |item|}}
    <tr>
        <td>Inv/dep/kat/{{item.kode_barang}} </td>
        <td>{{item.nama_barang}} </td>
        <td>{{format-date item.created}} </td>
        {{!--<td>{{format-date item.updated}} </td>--}}
        <td>
            {{#if item.updated}} 
                {{format-date item.updated}}
            {{else}}
                -
            {{/if}}    
        </td>
        <td>
            <button class="btn btn-danger" {{action 'deleteBarang' item}} >Delete</button>
            {{#link-to 'barang.edit' item.id tagName='button' class="btn btn-warning" }}Edit{{/link-to}}
        </td>
    </tr>
    {{/each}}
    </tbody>
</table>
