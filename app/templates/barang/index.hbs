<form{{action 'addBarang' barang on='submit'}}>
    <table>
        <tr>
            <td>Nama Barang</td>
            <td>:</td>
            <td>{{input value = barang.nama_barang required=true}}</td>
        </tr>
        <tr style="background-color: white">
            <td>departement</td>
            <td>:</td>
            <td>
                <select name="role" class="form-control" required value="{{depart.kode_departemen}}">
                    {{#each departemens as |depart|}}
                        <option value="{{depart.kode_departemen}}">{{depart.kode_departemen}}</option>
                    {{/each}}
                </select>
            </td>
        </tr>
        <tr>
            <td>kategori</td>
            <td>:</td>
            <td>
                <select name="" id="" required class="form-control">
                    <option value="">select kategori</option>
                    {{#each kategoris as |kate|}}
                        <option value="{{kate.kode_kategori}}">{{kate.kode_kategori}}</option>
                    {{/each}}
                </select>
            </td>
        </tr>
        <tr style="background-color: white">
            <td colspan="3">
                <button type="submit">Add</button>
            </td>
        </tr>
    </table>
</form>
<table>
    <tr>
        <th>kodebarang</th>
        <th>nama barang</th>
        <th>departement</th>
        <th>created</th>
        <th>updated</th>
        <th>action</th>
    </tr>
    {{#each barangs as |item|}}

    <tr>
        <td>Inv/{{item.kode_departemen}}/kat/{{item.kode_barang}} </td>
        <td>{{item.nama_barang}} </td>
        <td>{{item.kode_departemen}} </td>
        <td>{{format-date item.created}} </td>        
        <td>
            {{#if item.updated}} 
                {{format-date item.updated}}
            {{else}}
                -
            {{/if}}    
        </td>
        <td>
            <button class="btn btn-danger" {{action 'deleteBarang' item}} >Delete</button>
            {{#link-to 'barang.edit' item.id tagName='button' class="btn btn-warning" }}Edit{{/link-to}}
        </td>
    </tr>
    {{/each}}
</table>