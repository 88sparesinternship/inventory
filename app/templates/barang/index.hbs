<form{{action 'addBarang' barang on='submit'}}>
    <table border="1">
        <tr>
            <td>Nama Barang</td>
            <td>:</td>
            <td>{{input value = barang.nama_barang required=true}}</td>
        </tr>
        <tr style="background-color: white">
            <td>departement</td>
            <td>:</td>
            <td>
                <select>
                    {{#each model.departemen as |departemen|}}
                    <option value="{{departemen.nama_departemen}}">{{departemen.nama_departemen}}</option>
                    {{/each}}
                </select>
            </td>
        </tr>
        <tr>
            <td>kategori</td>
            <td>:</td>
            <td>
                <select>
                    {{#each model.kategori as |kategori|}}
                    <option value="{{kategori.nama_kategori}}">{{kategori.nama_kategori}}</option>
                    {{/each}}
                </select> </td>
        </tr>
        <tr style="background-color: white">
            <td colspan="3">
                <button type="submit">Add</button>
            </td>
        </tr>
    </table>
</form>
<table>
    <tr>
        <th>Kode Barang</th>
        <th>nama barang</th>
        <th>created</th>
        <th>updated</th>
        <th>action</th>
    </tr>
    {{#each model.barang as |barang|}}
    <tr>
        <td>Inv/dep/kat/{{barang.kode_barang}} </td>
        <td>{{barang.nama_barang}} </td>
        <td>{{format-date barang.created}} </td>
        {{!--<td>{{format-date barang.updated}} </td>--}}
        <td>
            {{#if barang.updated}} 
                {{format-date barang.updated}}
            {{else}}
                -
            {{/if}}    
        </td>
        <td>
            <button class="btn btn-danger" {{action 'deleteBarang' barang}} >Delete</button>
            {{#link-to 'barang.edit' barang.id tagName='button' class="btn btn-warning" }}Edit{{/link-to}}
        </td>
    </tr>
    {{/each}}
</table>