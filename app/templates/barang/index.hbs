<form {{action 'addBarang' barang on='submit'}}>
    nama barang : {{input required=true value=barang.nama_barang}} <br>
    stok : {{input required=true value=barang.stok}}
    <button type="submit">add</button>
</form>
<table>
    <tr>
        <th>Nama Barang</th>
        <th>Stok</th>
        <th>Tanggal Masukan</th>
        <th>Action</th>
    </tr>
    {{#each model as |item|}}
    <tr>
        <td>{{item.nama_barang}}</td>
        <td>{{item.stok}}</td>
        <td>{{format-date item.created}}</td>
        <td>
            <button {{action "deleteBarang" item}} class="btn  btn-danger">
                Delete
            </button>
        </td>
    </tr>
    {{/each}}
</table>