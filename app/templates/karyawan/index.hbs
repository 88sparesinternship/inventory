<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">

<form {{action 'addKaryawan' karyawan on='submit'}}>
    <div class="form-group">
        <label for=""> Nama Karyawan :</label> 
        {{input value=karyawan.nama_karyawan class="form-control"}}
        
        <label for=""> Departemen : </label>
        <select class="form-control" onchange={{action 'selected' value='target.value'}}> 
        
        {{#each departemens as |item|}}
            <option selected hidden>---</option>
            <option value="{{item.nama_departemen}}">{{ item.nama_departemen}}</option>
        {{/each}}    
        </select>
    </div>
    <button class="btn btn-success" type="submit">Simpan</button>
</form>
<br>


        <table class="table table-striped">
            <thead class="table-dark">
                <tr>
                    <th scope="col">No</th>
                    <th scope="col">Departemen</th>
                    <th scope="col">Nama karyawan</th>
                    <th scope="col">Action</th>
                </tr>
            </thead>
                <tbody>
                    {{#each karyawans as |item|}}
                    <tr>
                        <td>{{item.kode_karyawan}} </td>
                        <td>{{item.nama_departemen}}</td>
                        <td>{{item.nama_karyawan}}</td>
                        <td>
                            <button class="btn btn-danger" {{action 'deleteKaryawan' item.id}}>Delete</button>
                            {{!--<button {{action 'updateKaryawan' item.id}}>Edit</button>--}}
                            {{#link-to 'karyawan.edit' item.id tagName='button' class="btn btn-warning" }}Edit{{/link-to}}
                        </td>
                    </tr>
                    {{/each}}   
                </tbody>
            </table>



